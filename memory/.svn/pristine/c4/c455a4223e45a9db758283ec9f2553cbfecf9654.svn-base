body {
	text-align: center;
	width: 100%;
	height: 100%;
	margin: 0px auto;
	padding: 0px;
}

div {
	margin: 0px;
	padding: 0px;
}

.content {
	position: absolute;
	top: 20%;
	left: 0px;
	right: 0px;
	bottom: 0px;
	text-align: center;
	vertical-align: middle;
}

.top_left,.top_right {
	width: 340px;
	height: 50px;
}

.top_center {
	width: 680px;
	height: 20px;
}

.content_left,.content_right {
	width: 340px;
	height: 180px;
}

.bottom_1 {
	width: 680px;
	height: 3px;
	text-align: right;
	display: none;
}

.bottom_2 {
	width: 680px;
	height: 28px;
	font-size: 20px;
	color: red;
	text-align: center;
}

.d_txt {
	width: 100px;
	font-size: 15px;
}

.d_val {
	width: 235px;
	height: 30px;
}

.d_val input {
	width: 190px;
	height: 25px;
}

.d_main {
	background-image: url(../../images/login_bg.png);
	background-repeat: no-repeat;
}

.d_val select {
	width: 196px;
	height: 30px;
}